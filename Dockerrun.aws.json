{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "website-shared-files",
      "host": {
	"sourcePath": "/usr/local/wormbase/website-shared-files"
      }
    },
    {
      "name": "acedb-wormbase-files",
      "host": {
        "sourcePath": "/usr/local/wormbase/acedb/wormbase"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
    "containerDefinitions": [
        {
	    "name": "elasticsearch",
	    "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/aws-elasticsearch:0.2.14",
	    "essential": true,
	    "portMappings": [
		{
		    "hostPort": 9200,
		    "containerPort": 9200
		},
		{
		    "hostPort": 9300,
		    "containerPort": 9300
		}
	    ],
            "memory": 2000
	},
    {
      "name": "website",
      "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/website:latest",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 5001,
          "containerPort": 5000
        }
      ],
      "environment": [
	{
	  "name": "ACEDB_HOST",
	  "value": "acedb"
	}
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-website",
          "containerPath": "/usr/local/wormbase/website/logs"
        }
      ],
      "memory": 512
    },
    {
      "name": "nginx-proxy",
      "image": "nginx:1.13.7",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 80
        }
      ],
      "links": [
        "website"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ],
      "memory": 128
    }
  ]
}

{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "website-shared-files",
      "host": {
	"sourcePath": "/usr/local/wormbase/website-shared-files"
      }
    },
    {
      "name": "acedb-wormbase-files",
      "host": {
        "sourcePath": "/usr/local/wormbase/acedb/wormbase"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "website",
      "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/website:latest",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "links": ["acedb"],
      "environment": [
	{
	  "name": "ACEDB_HOST",
	  "value": "acedb"
	}
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-website",
          "containerPath": "/usr/local/wormbase/website/logs"
        }
      ],
      "memory": 512
    },
    {
      "name": "acedb",
      "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/acedb:latest",
      "essential": true,
      "portMappings": [
	{
	  "hostPort": 2005,
	  "containerPort": 2005
	}
      ],
      "mountPoints": [
        {
          "sourceVolume": "acedb-wormbase-files",
          "containerPath": "/root/acedb/wormbase"
        }
      ],
      "memory": 512
    },
    {
      "name": "nginx-proxy",
      "image": "nginx:1.13.7",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "website"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ],
      "memory": 128
    }
  ]
}
